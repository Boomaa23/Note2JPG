<?xml version="1.0" encoding="UTF-8"?>
<project name="note2jpg" default="all">
  
  
  <property file="note2jpg.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.com.googlecode.plist:dd-plist:1.23.classpath">
    <pathelement location="${path.variable.maven_repository}/com/googlecode/plist/dd-plist/1.23/dd-plist-1.23.jar"/>
  </path>
  
  <path id="library.net.lingala.zip4j:zip4j:2.5.0.classpath">
    <pathelement location="${path.variable.maven_repository}/net/lingala/zip4j/zip4j/2.5.0/zip4j-2.5.0.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module Note2JPG -->
  
  <dirname property="module.note2jpg.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.note2jpg" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="note2jpg.output.dir" value="${module.note2jpg.basedir}/out/production/Note2JPG"/>
  <property name="note2jpg.testoutput.dir" value="${module.note2jpg.basedir}/out/test/Note2JPG"/>
  
  <path id="note2jpg.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="note2jpg.module.production.classpath">
    <path refid="library.com.googlecode.plist:dd-plist:1.23.classpath"/>
    <path refid="library.net.lingala.zip4j:zip4j:2.5.0.classpath"/>
  </path>
  
  <path id="note2jpg.runtime.production.module.classpath">
    <pathelement location="${note2jpg.output.dir}"/>
    <path refid="library.com.googlecode.plist:dd-plist:1.23.classpath"/>
    <path refid="library.net.lingala.zip4j:zip4j:2.5.0.classpath"/>
  </path>
  
  <path id="note2jpg.module.classpath">
    <pathelement location="${note2jpg.output.dir}"/>
    <path refid="library.com.googlecode.plist:dd-plist:1.23.classpath"/>
    <path refid="library.net.lingala.zip4j:zip4j:2.5.0.classpath"/>
  </path>
  
  <path id="note2jpg.runtime.module.classpath">
    <pathelement location="${note2jpg.testoutput.dir}"/>
    <pathelement location="${note2jpg.output.dir}"/>
    <path refid="library.com.googlecode.plist:dd-plist:1.23.classpath"/>
    <path refid="library.net.lingala.zip4j:zip4j:2.5.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.note2jpg">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.note2jpg">
    <patternset refid="excluded.from.module.note2jpg"/>
  </patternset>
  
  <path id="note2jpg.module.sourcepath">
    <dirset dir="${module.note2jpg.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.note2jpg" depends="compile.module.note2jpg.production,compile.module.note2jpg.tests" description="Compile module Note2JPG"/>
  
  <target name="compile.module.note2jpg.production" description="Compile module Note2JPG; production classes">
    <mkdir dir="${note2jpg.output.dir}"/>
    <javac destdir="${note2jpg.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.note2jpg}"/>
      <bootclasspath refid="note2jpg.module.bootclasspath"/>
      <classpath refid="note2jpg.module.production.classpath"/>
      <src refid="note2jpg.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.note2jpg"/>
    </javac>
    
    <copy todir="${note2jpg.output.dir}">
      <fileset dir="${module.note2jpg.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.note2jpg.tests" depends="compile.module.note2jpg.production" description="compile module Note2JPG; test classes" unless="skip.tests"/>
  
  <target name="clean.module.note2jpg" description="cleanup module">
    <delete dir="${note2jpg.output.dir}"/>
    <delete dir="${note2jpg.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.note2jpg" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.note2jpg" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>